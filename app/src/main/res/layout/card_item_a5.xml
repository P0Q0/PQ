<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="100dp">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_root_a5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLight">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/card_btn_a5"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/card_item_button"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorYellow"
                app:rippleColor="@color/colorLight"
                app:backgroundTint="@color/colorDark"
                android:backgroundTint="@color/colorDark"
                app:layout_constraintTop_toTopOf="@id/card_a5_gl50_h"
                app:layout_constraintBottom_toBottomOf="@id/card_a5_gl50_h"
                app:layout_constraintStart_toStartOf="@+id/card_a5_gl25_v"
                app:layout_constraintEnd_toEndOf="@id/card_a5_gl75_v"
                android:elevation="7dp"
                app:elevation="7dp"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/card_a5_gl25_v"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/card_a5_gl50_v"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.50"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/card_a5_gl75_v"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/card_a5_gl25_h"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.25"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/card_a5_gl50_h"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.50"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/card_a5_gl75_h"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>