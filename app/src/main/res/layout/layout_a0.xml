<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_a0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/a0_til_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/colorLight"
        app:layout_constraintBottom_toTopOf="@id/a0_gl50_h"
        app:layout_constraintLeft_toLeftOf="@id/a0_gl25_v"
        app:layout_constraintRight_toRightOf="@id/a0_gl75_v"
        android:layout_marginBottom="05dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/a0_tiet_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/colorDark"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/a0_til_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/colorLight"
        app:layout_constraintTop_toBottomOf="@id/a0_gl50_h"
        app:layout_constraintLeft_toLeftOf="@id/a0_gl25_v"
        app:layout_constraintRight_toRightOf="@id/a0_gl75_v"
        android:layout_marginTop="05dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/a0_tiet_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/colorDark"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/a0_mtv_1"
        android:text="@string/select_pq_a0"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/colorDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/a0_gl75_h"
        app:layout_constraintBottom_toBottomOf="@+id/a0_gl75_h"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/a0_gl25_v"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/a0_gl75_v"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/a0_gl50_h"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/a0_gl75_h"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"/>
</androidx.constraintlayout.widget.ConstraintLayout>